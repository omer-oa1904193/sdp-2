datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  type     UserType

  // student fields
  quid             String?
  name             String?
  enrollmentSeason Season
  enrollmentYear   Int
}

enum UserType {
  STUDENT
  ACADEMIC_ADVISOR
  PROGRAM_COORDINATOR
}

enum Season {
  FALL
  SUMMER
  SPRING
  WINTER
}
